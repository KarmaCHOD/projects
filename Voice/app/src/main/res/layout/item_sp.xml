<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Lodged by  "
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/name_dispalay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:  "
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/email_dispalay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Title: "
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="@font/abril_fatface"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/title_dispalay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Type: "
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="@font/abril_fatface"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/type_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="@font/abril_fatface"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/des_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="@font/abril_fatface"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/status_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_status_update"
            android:layout_width="wrap_content"
            android:onClick="UpdateStatus"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#00000000"
            android:padding="5dp"
            android:text="Update Complaint Status?"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</ScrollView>